{
  "id": "state",
  "name": "State Management (Zustand)",
  "description": "Simple, fast state management with Zustand",
  "version": "5.0.0",
  "category": "state",
  "dependencies": [],
  "incompatible_with": [],
  "installation": {
    "commands": [
      "npm install zustand@latest immer@latest"
    ],
    "files": [
      {
        "source": "state/store.ts",
        "destination": "src/lib/store/index.ts"
      },
      {
        "source": "state/example-store.ts",
        "destination": "src/lib/store/example-store.ts"
      },
      {
        "source": "state/store-provider.tsx",
        "destination": "src/components/providers/store-provider.tsx"
      }
    ],
    "transforms": [
      {
        "file": "src/app/layout.tsx",
        "pattern": "<body[^>]*>",
        "replacement": "<body className={inter.className}>\n      <StoreProvider>"
      },
      {
        "file": "src/app/layout.tsx",
        "pattern": "</body>",
        "replacement": "      </StoreProvider>\n    </body>"
      },
      {
        "file": "src/app/layout.tsx",
        "pattern": "import[^\\n]*\\n",
        "replacement": "import './globals.css';\nimport { StoreProvider } from '@/components/providers/store-provider';\n"
      }
    ]
  },
  "configuration": {
    "options": [
      {
        "name": "persist",
        "type": "boolean",
        "description": "Use persistence middleware to save state to localStorage",
        "default": true
      },
      {
        "name": "immer",
        "type": "boolean",
        "description": "Use immer for immutable state updates",
        "default": true
      }
    ]
  }
} 