{
  "id": "auth",
  "name": "Authentication",
  "description": "Complete authentication solution using Auth.js (NextAuth) with credentials and OAuth providers",
  "version": "1.0.0",
  "category": "advanced",
  "dependencies": [],
  "incompatible_with": [],
  "installation": {
    "commands": [
      "npm install next-auth@latest"
    ],
    "files": [
      {
        "source": "auth/auth.ts",
        "destination": "src/lib/auth.ts"
      },
      {
        "source": "auth/authOptions.ts",
        "destination": "src/lib/authOptions.ts"
      },
      {
        "source": "auth/route.ts",
        "destination": "src/app/api/auth/[...nextauth]/route.ts"
      },
      {
        "source": "auth/providers.ts",
        "destination": "src/lib/providers.ts"
      }
    ],
    "transforms": [
      {
        "file": "src/app/layout.tsx",
        "pattern": "export default function RootLayout",
        "replacement": "import { AuthProvider } from '@/lib/providers';\n\nexport default function RootLayout"
      },
      {
        "file": "src/app/layout.tsx",
        "pattern": "<body className={inter.className}>",
        "replacement": "<body className={inter.className}>\n<AuthProvider>"
      },
      {
        "file": "src/app/layout.tsx",
        "pattern": "{children}",
        "replacement": "{children}\n</AuthProvider>"
      }
    ]
  },
  "configuration": {
    "options": [
      {
        "name": "providers",
        "type": "select",
        "description": "Authentication providers to include",
        "default": "credentials",
        "options": ["credentials", "google", "github", "all"]
      },
      {
        "name": "includeProtectedRoutes",
        "type": "boolean",
        "description": "Include examples of protected routes",
        "default": true
      }
    ]
  }
} 