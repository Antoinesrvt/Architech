{
  "id": "daisyui",
  "name": "DaisyUI",
  "description": "Component library for Tailwind CSS with beautiful pre-designed components",
  "version": "5.0.0",
  "category": "ui",
  "dependencies": ["tailwind"],
  "incompatible_with": [],
  "installation": {
    "commands": [
      "npm install -D daisyui@latest"
    ],
    "files": [],
    "transforms": [
      {
        "file": "tailwind.config.js",
        "pattern": "module.exports = {",
        "replacement": "const daisyui = require('daisyui');\n\nmodule.exports = {"
      },
      {
        "file": "tailwind.config.js",
        "pattern": "plugins: \\[.*\\],",
        "replacement": "plugins: [daisyui],"
      },
      {
        "file": "tailwind.config.ts",
        "pattern": "import type { Config } from 'tailwindcss'",
        "replacement": "import type { Config } from 'tailwindcss'\nimport daisyui from 'daisyui'"
      },
      {
        "file": "tailwind.config.ts",
        "pattern": "plugins: \\[.*\\],",
        "replacement": "plugins: [daisyui],"
      }
    ]
  },
  "configuration": {
    "options": [
      {
        "name": "themes",
        "type": "select",
        "description": "DaisyUI themes to include",
        "default": ["light", "dark"],
        "options": [
          "light", "dark", "cupcake", "bumblebee", "emerald", "corporate",
          "synthwave", "retro", "cyberpunk", "valentine", "halloween", "garden",
          "forest", "aqua", "lofi", "pastel", "fantasy", "wireframe", "black",
          "luxury", "dracula", "cmyk", "autumn", "business", "acid", "lemonade", 
          "night", "coffee", "winter", "dim", "nord", "sunset"
        ]
      },
      {
        "name": "customTheme",
        "type": "boolean",
        "description": "Create a custom theme based on an existing one",
        "default": false
      },
      {
        "name": "baseTheme",
        "type": "select",
        "description": "Base theme for customization",
        "default": "light",
        "options": [
          "light", "dark", "cupcake", "bumblebee", "emerald", "corporate",
          "synthwave", "retro", "cyberpunk", "valentine", "halloween", "garden",
          "forest", "aqua", "lofi", "pastel", "fantasy", "wireframe", "black",
          "luxury", "dracula", "cmyk", "autumn", "business", "acid", "lemonade", 
          "night", "coffee", "winter", "dim", "nord", "sunset"
        ]
      }
    ]
  }
} 