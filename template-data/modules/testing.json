{
  "id": "testing",
  "name": "Testing Suite",
  "description": "Complete testing setup with Jest and React Testing Library",
  "version": "1.0.0",
  "category": "testing",
  "dependencies": [],
  "incompatible_with": [],
  "installation": {
    "commands": [
      "npm install -D jest @testing-library/react @testing-library/jest-dom jest-environment-jsdom @testing-library/user-event"
    ],
    "files": [
      {
        "source": "testing/jest.config.js",
        "destination": "jest.config.js"
      },
      {
        "source": "testing/jest.setup.js",
        "destination": "jest.setup.js"
      },
      {
        "source": "testing/test-utils.tsx",
        "destination": "src/lib/test-utils.tsx"
      }
    ],
    "transforms": [
      {
        "file": "package.json",
        "pattern": "\"scripts\": \\{",
        "replacement": "\"scripts\": {\n    \"test\": \"jest\",\n    \"test:watch\": \"jest --watch\","
      }
    ]
  },
  "configuration": {
    "options": [
      {
        "name": "includeExamples",
        "type": "boolean",
        "description": "Include example test files",
        "default": true
      },
      {
        "name": "useMSW",
        "type": "boolean",
        "description": "Include Mock Service Worker for API mocking",
        "default": false
      }
    ]
  }
} 